{
  "openapi": "3.0.1",
  "info": { "title": "Microservice Cliente", "version": "1.0.0" },
  "paths": {
    "/cliente/consultationtcclient": {
      "post": {
        "tags": ["Cliente"],
        "parameters": [
          { "name": "correlationId", "in": "header", "schema": { "type": "string" } }
        ],
        "requestBody": {
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/ConsultationTCClientRequestModel" } }
          }
        },
        "responses": { "200": { "description": "Success" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } },
        "security": [ { "OAuth2": ["svr-cliente"] } ]
      }
    },
    "/cliente/version": {
      "post": {
        "tags": ["Cliente"],
        "parameters": [
          { "name": "correlationId", "in": "header", "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "Success" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } },
        "security": [ { "OAuth2": ["svr-cliente"] } ]
      }
    }
  },
  "components": {
    "schemas": {
      "ConsultationTCClientRequestModel": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "nullable": true },
          "cuil": { "type": "string", "nullable": true }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "OAuth2": {
        "type": "oauth2",
        "description": "Client Credentials",
        "flows": {
          "clientCredentials": {
            "tokenUrl": "http://localhost:8500/connect/token",
            "refreshUrl": "http://localhost:8500/connect/token",
            "scopes": { "svr-cliente": "Microservice Cliente" }
          }
        }
      }
    }
  }
}
